<!DOCTYPE HTML>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <link rel="stylesheet" type="text/css" href="/stylesheets/animal.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="/javascripts/animal.js"></script>
    <script src="/javascripts/welcome.js"></script>
    <script src="/javascripts/register.js"></script>
    <script src="/javascripts/login.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>
<body>
<header>
    <div class="heading">
        <h3 id="welcomeId">Pet Adoption</h3>
    </div>
    <div class="links">
        <%- include partials/header.ejs %>
    </div>
</header>
<div class="animalInfo">
    <div class="container1">

        <div class="left-column">
            <form  id="commentForm" method="POST" action="/insertComment"  enctype="multipart/form-data">
                <input type="hidden" id="animalId" name="animalId" value="<%=data._id%>">
            <canvas id="canvas">
                <img type="image" alt="" id="animalImagePathId"
                     src="<%= data.animalImage %>"/>
            </canvas>
            <div>
                <input type="submit" class="button" name="image-comment" id="image-comment" value="Add as a comment"/>
            </div>
            </form>
        </div>

        <div class="right-column">
            <h1><%= data.name %></h1>
            <p><%= data.town %></p>
            <p><%= data.petType %></p>

            <input type="submit" class="button" name="adoptBtn" id="adoptBtn" value="Apply for adoption"
                   onclick="popup_modal('adoptionModal');"/>

            <div class="right-column">
                <ul class="comment-section">

                    <h1>Comments</h1>
                    <%  for(var i = 0; i < comments.length; i++) { %>
                    <li class="comments">
                        <div class="information">
                            <p1 id="user"><%= comments[i].user %> <span id="dateOfComment"><%= comments[i].dateOfComment %></span></p1>
                        </div>
                        <p2 id="textComment"><%= comments[i].commentText %></p2>
                        <br>
                        <br>
                    </li>
                    <% } %>

                    <!â€”Add more comments in this section-->
                    <form  id="commentForm" method="POST" action="/insertComment">
                        <input type="hidden" id="animalId" name="animalId" value="<%=data._id%>">

                        <textarea placeholder="Please add your comment here" id="newComment" name="newComment"></textarea>
                        <div>
                            <input type="submit" class="button" name="comment" id="comment" value="Submit"/>

                        </div>
                    </form>
                </ul>
            </div>
        </div>
    </div>
    <!-- The Log in modal -->
    <%- include partials/login.ejs %>

    <!--The registration popup modal -->
    <%- include partials/registration.ejs %>

    <!-- Add animal modal -->
    <%- include partials/addanimal.ejs %>

    <!-- Success modal -->
    <%- include partials/success.ejs %>

    <!-- Adoption form modal -->
    <%- include partials/adoption.ejs %>
</div>


<script>
    var canvas = document.getElementById('canvas');
    var imgSrc = document.getElementById('animalImagePathId').src
    var ctx = canvas.getContext('2d');
    var cnvDispSizeW = 400;
    var cnvDispSizeH = 500;
    var mDown = false;
    var lastX = 0, lastY = 0;

    window.onload = function () {

        var img = new Image();
        img.src = imgSrc;

        img.onload = function () {
            fill_canvas(img);
        }

        function fill_canvas(img) {

            canvas.width = img.width;
            canvas.height = img.height;

            ctx.drawImage(img, 0, 0);
        }
    }

    var posConv = function (x, y) {
        return {
            x: canvas.width * x / cnvDispSizeW,
            y: canvas.height * y / cnvDispSizeH
        }
    };
    canvas.onmousedown = function (evt) {
        mDown = true;
        var mPos = posConv(evt.offsetX, evt.offsetY);
        draw(mPos.x, mPos.y);
    }
    canvas.onmouseup = function (evt) {
        mDown = false;
        lastX = lastY = 0;
    }
    canvas.onmousemove = function (evt) {
        if (!mDown) return;
        var mPos = posConv(evt.offsetX, evt.offsetY);
        draw(mPos.x, mPos.y);
    }

    function draw(x, y) {
        if (mDown && lastX) {
            ctx.beginPath();
            ctx.strokeStyle = 'red';
            ctx.lineWidth = 10;
            ctx.lineJoin = 'round';
            ctx.moveTo(lastX, lastY);
            ctx.lineTo(x, y);
            ctx.closePath();
            ctx.stroke();
        }
        lastX = x;
        lastY = y;
    }

</script>

</body>
</html>